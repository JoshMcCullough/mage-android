<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <ImageView
        android:id="@+id/map_data_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/overlay_item_image_default_content_description"
        app:layout_constraintTop_toTopOf="@id/vertical_center"
        app:layout_constraintBottom_toBottomOf="@id/vertical_center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/map_data_name"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <TextView
        android:id="@+id/map_data_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ListTextPrimary"
        app:layout_constraintTop_toTopOf="@id/vertical_center"
        app:layout_constraintBottom_toBottomOf="@id/vertical_center"
        app:layout_constraintLeft_toRightOf="@+id/map_data_icon"
        app:layout_constraintRight_toLeftOf="@+id/map_data_visible"
        />

    <TextView
        android:id="@+id/map_data_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/ListTextSecondary"
        app:layout_constraintTop_toBottomOf="@+id/map_data_name"
        app:layout_constraintLeft_toLeftOf="@+id/map_data_name"
        app:layout_constraintRight_toRightOf="@+id/map_data_name"
        />

    <ImageView
        android:id="@+id/map_data_drag_icon"
        app:srcCompat="@drawable/ic_swap_vert_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        app:layout_constraintRight_toLeftOf="@id/map_data_visible"
        app:layout_constraintTop_toTopOf="@id/vertical_center"
        app:layout_constraintBottom_toBottomOf="@id/vertical_center"
        app:layout_goneMarginRight="12dp"
        tools:ignore="RtlHardcoded"
        android:contentDescription="@string/cd_layer_drag_handle"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/map_data_visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/vertical_center"
        app:layout_constraintBottom_toBottomOf="@id/vertical_center"
        app:layout_constraintLeft_toRightOf="@+id/map_data_name"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Spinner
        android:id="@+id/map_data_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/vertical_center"
        app:layout_constraintBottom_toBottomOf="@id/vertical_center"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ProgressBar
        android:id="@+id/map_data_layer_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/map_data_detail"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />

</android.support.constraint.ConstraintLayout>
