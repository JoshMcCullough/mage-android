<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/overlay_item_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/overlay_item_image_default_content_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/overlay_item_name"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        />

    <TextView
        android:id="@+id/overlay_item_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/overlay_item_image"
        app:layout_constraintLeft_toRightOf="@+id/overlay_item_image"
        app:layout_constraintRight_toLeftOf="@+id/overlay_item_enabled"
        app:layout_constraintBottom_toBottomOf="@+id/overlay_item_image"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/overlay_item_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="@id/overlay_item_name"
        app:layout_constraintBottom_toBottomOf="@id/overlay_item_name"
        app:layout_constraintLeft_toRightOf="@id/overlay_item_name"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>
