<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <mil.nga.giat.mage.map.GoogleMapWrapper
        android:id="@+id/map_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cast_expanded_controller_ad_label_background_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="0.6"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@+id/map_overlays_container"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <FrameLayout
        android:id="@+id/map_overlays_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="0.4"
        >
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
