<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mgrs_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/mgrs_bg"
    android:padding="4dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:showIn="@layout/fragment_map"
    >

    <RelativeLayout
        android:id="@+id/mgrs_panel_minimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/mgrs_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="8dp"
            android:text="MGRS"
            style="@style/MGRSPrimary"
            />

        <TextView
            android:id="@+id/mgrs_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/mgrs_code_label"
            android:text="##############"
            style="@style/MGRSPrimary"
            tools:text="AABB1234567890"
            />

    </RelativeLayout>

    <GridLayout
        android:id="@+id/mgrs_panel_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        >

        <TextView
            android:id="@+id/mgrs_gzd_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="GZD"
            style="@style/MGRSDetail"
            />

        <TextView
            android:id="@+id/mgrs_gzd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="end"
            android:text="##"
            style="@style/MGRSDetail"
            tools:text="AA"
            />

        <TextView
            android:id="@+id/mgrs_easting_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Easting"
            style="@style/MGRSDetail"
            />

        <TextView
            android:id="@+id/mgrs_easting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="#####"
            style="@style/MGRSDetail"
            tools:text="12345"
            />

        <TextView
            android:id="@+id/mgrs_100km_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="100km"
            style="@style/MGRSDetail"
            />

        <TextView
            android:id="@+id/mgrs_100km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="end"
            android:text="##"
            style="@style/MGRSDetail"
            tools:text="BB"
            />

        <TextView
            android:id="@+id/mgrs_northing_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Northing"
            style="@style/MGRSDetail"
            />

        <TextView
            android:id="@+id/mgrs_northing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="#####"
            style="@style/MGRSDetail"
            tools:text="67890"
            />
    </GridLayout>
</LinearLayout>