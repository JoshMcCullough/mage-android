<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mil.nga.giat.mage.map.MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/map_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/map_overlays_anchor"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_search_button"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        app:backgroundTint="@color/toggle_button"
        app:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/zoom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_my_location_black_24dp"
        android:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toBottomOf="@id/map_search_button"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_layer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_layers_black_24dp"
        android:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toBottomOf="@id/zoom_button"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_observation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_add_black_24dp"
        android:theme="@style/AppTheme.PrimaryFAB"
        app:layout_constraintBottom_toTopOf="@+id/map_overlays_anchor"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="normal"
        />

    <FrameLayout
        android:id="@+id/search_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/map_search_foreground"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/map_search_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/map_search_button"
        >

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A8000000"
            android:imeActionLabel="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            app:queryHint="Search address"
            app:searchIcon="@null"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/mgrs_grid_cursor"
        android:visibility="gone"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:alpha=".35"
        android:tint="@color/md_grey_600"
        />

    <android.support.constraint.Guideline
        android:id="@+id/map_overlays_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0"
        />

    <FrameLayout
        android:id="@+id/map_overlays_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/map_overlays_anchor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    </FrameLayout>

    <LinearLayout
        android:id="@+id/mgrs_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_peekHeight="50dp"
        android:background="@color/md_grey_600"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mgrs_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                style="@style/ListTextPrimary"
                android:textSize="18sp"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MGRS"
                style="@style/ListTextSecondary"
                android:textSize="18sp"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GZD Zone"
                style="@style/ListTextSecondary"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:id="@+id/mgrs_gzd_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/ListTextPrimary"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100km Grid"
                style="@style/ListTextSecondary"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:id="@+id/mgrs_grid_zone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/ListTextPrimary"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easting"
                style="@style/ListTextSecondary"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:id="@+id/mgrs_easting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/ListTextPrimary"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Northing"
                style="@style/ListTextSecondary"
                android:textColor="@color/md_white_1000"/>

            <TextView
                android:id="@+id/mgrs_northing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                style="@style/ListTextPrimary"
                android:textColor="@color/md_white_1000"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>