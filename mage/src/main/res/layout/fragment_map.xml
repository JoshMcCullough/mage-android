<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="mil.nga.giat.mage.map.MapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:id="@+id/map_wrapper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/map_bottom_anchor"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_search_button"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:backgroundTint="@color/toggle_button"
        app:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/zoom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_my_location_black_24dp"
        android:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toBottomOf="@+id/map_search_button"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_layer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_layers_black_24dp"
        android:theme="@style/AppTheme.AlternateFAB"
        app:layout_constraintTop_toBottomOf="@+id/zoom_button"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="mini"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/new_observation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_add_black_24dp"
        android:theme="@style/AppTheme.PrimaryFAB"
        app:layout_constraintBottom_toTopOf="@+id/map_bottom_anchor"
        app:layout_constraintRight_toRightOf="parent"
        app:fabSize="normal"
        />

    <FrameLayout
        android:id="@+id/search_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/map_search_foreground"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/map_search_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/map_search_button"
        >

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#A8000000"
            android:imeActionLabel="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            app:queryHint="Search address"
            app:searchIcon="@null"
            />

    </FrameLayout>

    <ImageView
        android:id="@+id/mgrs_grid_cursor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mgrs_cursor"
        app:layout_constraintLeft_toLeftOf="@id/map_wrapper"
        app:layout_constraintRight_toRightOf="@id/map_wrapper"
        app:layout_constraintTop_toTopOf="@id/map_wrapper"
        app:layout_constraintBottom_toBottomOf="@id/map_bottom_anchor"
        />

    <android.support.constraint.Guideline
        android:id="@+id/map_bottom_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0"
        />

    <!-- TODO separate mgrs_code and extra info into separate views to properly calculate minimal height and extra height -->

    <LinearLayout
        android:id="@+id/mgrs_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/mgrs_bg"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <RelativeLayout
            android:id="@+id/mgrs_panel_minimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/mgrs_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:text="MGRS"
                style="@style/MGRSPrimary"
                />

            <TextView
                android:id="@+id/mgrs_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/mgrs_code_label"
                style="@style/MGRSPrimary"
                tools:text="AAAA1234567890"
                />

        </RelativeLayout>

        <GridLayout
            android:id="@+id/mgrs_panel_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="4"
            >

            <TextView
                android:id="@+id/mgrs_gzd_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="GZD"
                style="@style/MGRSDetail"
                />

            <TextView
                android:id="@+id/mgrs_gzd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                style="@style/MGRSDetail"
                tools:text="AA"
                />

            <TextView
                android:id="@+id/mgrs_easting_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Easting"
                style="@style/MGRSDetail"
                />

            <TextView
                android:id="@+id/mgrs_easting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MGRSDetail"
                tools:text="12345"
                />

            <TextView
                android:id="@+id/mgrs_100km_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="100km"
                style="@style/MGRSDetail"
                />

            <TextView
                android:id="@+id/mgrs_100km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                style="@style/MGRSDetail"
                tools:text="AA"
                />

            <TextView
                android:id="@+id/mgrs_northing_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Northing"
                style="@style/MGRSDetail"
                />

            <TextView
                android:id="@+id/mgrs_northing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MGRSDetail"
                tools:text="67890"
                />
        </GridLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/map_overlays_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/map_bottom_anchor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <android.support.constraint.Guideline
        android:id="@+id/vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>