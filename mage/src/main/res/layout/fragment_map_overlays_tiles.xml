<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/base_layer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/base_layer"
        android:text="BASE MAP"
        />

    <Spinner
        android:id="@+id/base_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tile_overlays_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/tile_overlays_list"
        android:text="TILE OVERLAYS"
        />

    <com.woxthebox.draglistview.DragListView
        android:id="@+id/tile_overlays_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>